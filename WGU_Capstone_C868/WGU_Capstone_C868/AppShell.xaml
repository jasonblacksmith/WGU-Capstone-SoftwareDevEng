<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WGU_Capstone_C868.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WGU_Capstone_C868"
    xmlns:view="clr-namespace:WGU_Capstone_C868.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="My MS Tracker"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="My MS Tracker Dashboard"
        ContentTemplate="{DataTemplate view:Dashboard}"
        Route="Dashboard" />
    <ShellContent 
        Title="My MS Tracker Imaging Or Labs"
        ContentTemplate="{DataTemplate view:ImageOrLabPage}"
        Route="ImageOrLabPage" />
</Shell>
